<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".UI_Fragment2_day">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/button_mon"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:enabled="false"
            android:textColor="@drawable/color_selector"
            android:textOff="월"
            android:textOn="월" />

        <ToggleButton
            android:id="@+id/button_tue"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/color_selector"
            android:textOff="화"
            android:textOn="화" />

        <ToggleButton
            android:id="@+id/button_wed"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/color_selector"
            android:textOff="수"
            android:textOn="수" />

        <ToggleButton
            android:id="@+id/button_thu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/color_selector"
            android:textOff="목"
            android:textOn="목" />

        <ToggleButton
            android:id="@+id/button_fri"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/color_selector"
            android:textOff="금"
            android:textOn="금" />

        <ToggleButton
            android:id="@+id/button_sat"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/color_selector"
            android:textOff="토"
            android:textOn="토" />

        <ToggleButton
            android:id="@+id/button_sun"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/color_selector"
            android:textOff="일"
            android:textOn="일" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include
            android:id="@+id/include"
            layout="@layout/fragment1_all_tag" />
    </FrameLayout>


</LinearLayout>